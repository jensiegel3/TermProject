<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF00FF00"
        android:layout_margin="5dp"
        android:text="Any more questions?" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF00FF00"
        android:layout_margin="5dp"
        android:textSize="10dp"
        android:text="The Bentley University Office of Sustainability’s mission is strategically aligned with the university’s goal of a holistic business education to make environmental and social considerations essential to all forward-looking business leaders." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF00FF00"
        android:layout_margin="5dp"
        android:text="Send Bentley's Office of Sustainability an email or call our directors below!" />

        <EditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF00FF00"
        android:layout_margin="5dp"
        android:text="" />

        <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF00FF00"
        android:layout_margin="5dp"
        android:text="" />
    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF00FF00"
        android:layout_margin="5dp"
        android:text="Send" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Amanda King, Director:"
            android:textColor="#FF00FF00" />

        <Button
            android:id="@+id/call1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:textColor="#FF00FF00"
            android:layout_margin="5dp"
            android:text="Call" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Natalie Berland, Asst. Director:"
            android:textColor="#FF00FF00" />


        <Button
            android:id="@+id/call2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="2"
            android:text="Call"
            android:textColor="#FF00FF00" />
    </LinearLayout>
</LinearLayout>